{% extends 'base.html.twig' %}

{% block title %}Nos produits
{% endblock %}

{% block body %}
	<h2 id="product">
		Nos produits</h2>
	<div id="products-card-container">
		{% for product in products %}
			<div id="product-card">
				<div id="products-card-content">
					<img src="{{ asset('/images/miel.jpg') }}"/>
					<h2>{{ product.name }}</h2>
					<p>{{ product.description }}</p>
					<p>{{ product.price }}
						€
					</p>
					<button>
						<a href='#'>Détails du produits</a>
					</button>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
